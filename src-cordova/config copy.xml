<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="17" id="com.quasar.controleonline" version="1.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Controle Online</name>
    <description> CRM
    </description>
    <author email="luiz.kim@controleonline.com" href="https://app.controleonline.com">
        Controle Online
    </author>
    <content src="index.html" />
    <allow-intent href="http:///" />
    <allow-intent href="https:///" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-navigation href="about:*" />
    <platform name="android">
        <engine name="android" spec="^12.0.0" />
        <plugin name="cordova-plugin-whitelist" />
        <preference name="android-minSdkVersion" value="28" />
        <preference name="android-compileSdkVersion" value="33" />
        <preference name="android-targetSdkVersion" value="33" />
        <!-- <icon density="mdpi" src="res/android//mipmap-mdpi/icon.png" />
        <icon density="hdpi" src="res/android/mipmap-hdpi/icon.png" />
        <icon density="xhdpi" src="res/android/mipmap-xhdpi/icon.png" />
        <icon density="xxhdpi" src="res/android/mipmap-xxhdpi/icon.png" />
        <icon density="xxxhdpi" src="res/android/mipmap-xxxhdpi/icon.png" /> -->
        <preference name="GradlePluginGoogleServicesEnabled" value="true" />
        <!-- <preference name="AndroidWindowSplashScreenBackground" value="#071359" />
        <preference name="AndroidWindowSplashScreenIconBackgroundColor" value="#071359" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/android/screen/ic_launcher.png" /> -->
        <preference name="AndroidXEnabled" value="false" />
        <allow-intent href="market:*" />
        <!-- <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application/activity[@android:name='MainActivity']">
            <application android:usesCleartextTraffic="true" />
            <activity android:exported="true" />
        </edit-config> -->
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
        <uses-permission android:name="android.permission.CAMERA" />
    </platform>

    <!-- <preference name="GradlePluginKotlinVersion" value="1.7.21" /> -->
</widget>

